{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    // Added settings to help TypeScript resolve library types
    "module": "esnext",
    "moduleResolution": "bundler", 
    "jsx": "react-jsx" 
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}